@inherits InputText

<div class="form-control">
  <label class="label">
    <LabelText For="@ValueExpression" class="label-text" />
  </label>
  <InputText 
    Value="@Value" 
    ValueChanged="@ValueChanged" 
    ValueExpression="@ValueExpression" 
    type="password"
    class="@("input input-bordered " + CssClass.Replace(" valid", " input-success").Replace(" invalid", " input-error"))"
    @attributes="@AdditionalAttributes" />
  <label class="label">
    <div data-tip="Not available" class="tooltip tooltip-bottom tooltip-info">
      <a href="/" class="label-text-alt link-hover">Forgot password?</a>
    </div>
    <div class="label-text-alt mx-2 text-error">
      <ValidationMessage For="@ValueExpression" />
    </div>
  </label>
</div>