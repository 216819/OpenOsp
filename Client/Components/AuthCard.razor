<div class="card w-full max-w-sm mx-2 flex-shrink-0 shadow-2xl bg-base-200">
  <form class="card-body">
    <div class="card-title w-full flex flex-row">
      <button class="btn btn-secondary flex-grow">Log in</button>
      <div class="divider divider-vertical" />
      <button class="btn btn-accent flex-grow">Register</button>
    </div>
    <div class="form-control">
      <label class="label">
        <span class="label-text">Email</span>
      </label>
      <input type="email" placeholder="your@email.com" class="input input-bordered" />
    </div>
    <div class="form-control">
      <label class="label">
        <span class="label-text">Password</span>
      </label>
      <input type="password" placeholder="Password" class="input input-bordered" />
      <label class="label">
        <a href="/" class="label-text-alt link-hover">Forgot password?</a>
      </label>
    </div>
    <div class="form-control mt-6">
      <input type="submit" value="Log in" class="btn btn-primary" />
    </div>
  </form>
</div>