<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.BlazorWebAssembly" >
  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <NpmLastInstall>./node_modules/.last-install</NpmLastInstall>
    <!-- <ServiceWorkerAssetsManifest>service-worker-assets.js</ServiceWorkerAssetsManifest> -->
  </PropertyGroup>
  <ItemGroup>
    <ProjectReference Include="..\Model\OpenOsp.Model.csproj" />
  </ItemGroup>
  <!-- Check if npm is installed -->
  <Target Name="NpmCheck" BeforeTargets="NpmInstall" >
    <Exec Command="npm -v" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="NPM not found. Please install Node.js and npm first." />
  </Target>
  <!-- Install node modules -->
  <Target Name="NpmInstall" BeforeTargets="NormalizeCSS" Inputs=".//package.json" Outputs="$(NpmLastInstall)" >
    <Exec Command="npm install" WorkingDirectory="./NodeJs" />
    <Touch Files="$(NpmLastInstall)" AlwaysCreate="true" />
  </Target>
  <!-- Copy normalize.css to wwwroot -->
  <Target Name="NormalizeCSS" BeforeTargets="Compile" >
    <Exec Command="npm run normalizecss" WorkingDirectory="./" />
    <!-- <Copy SourceFiles="./NodeJs/node_modules/normalize.css/normalize.css" DestinationFolder="./wwwroot/css/" /> -->
  </Target>
  <!-- Generate tailwind.css -->
  <Target Name="TailwindCSS" BeforeTargets="Compile" >
    <Exec Command="npm run tailwindcss" WorkingDirectory="./" />
  </Target>
  <!-- ServiceWorker for PWA -->
  <!-- <ItemGroup>
    <ServiceWorker Include=".\wwwroot\service-worker.js" PublishedContent=".\wwwroot\service-worker.published.js" />
  </ItemGroup> -->
  <!-- Paket -->
  <Import Project="..\.paket\Paket.Restore.targets" />
</Project>