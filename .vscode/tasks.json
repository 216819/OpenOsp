{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "base",
      "command": "npm",
			"args": [
        "run",
        "build"
			],
      "options": {
        "cwd": "${workspaceFolder}/Server/"
      }
		},
		{
			"label": "process-build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/Server/OpenOsp.Server.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/Server/"
      },
      "dependsOn": "base"
		},
		{
			"label": "process-publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/Server/OpenOsp.Server.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/Server/"
      },
      "dependsOn": "base"
		},
		{
			"label": "process-watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"${workspaceFolder}/Server/OpenOsp.Server.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
      "problemMatcher": "$msCompile",
      "options": {
        "cwd": "${workspaceFolder}/Server/"
      },
      "dependsOn": "base"
		},
    {
      "label": "build",
      "dependsOn": ["base", "process-build"],
      "dependsOrder": "sequence"
    },
    {
      "label": "publish",
      "dependsOn": ["base", "process-publish"],
      "dependsOrder": "sequence"
    },
    {
      "label": "watch",
      "dependsOn": ["base", "process-watch"],
      "dependsOrder": "sequence"
    },
	]
}